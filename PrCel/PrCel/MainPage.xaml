<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrCel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="DarkGray"
            >

            <Button
                Text=" Primeira Pagina"
                x:Name="btnCelulares"
                Clicked="btnCelulares_Clicked"
                BackgroundColor="White"
                />

            <Button
                Text="Segunda Pagina"
                x:Name="BtnCelulares2"
                Clicked="BtnCelulares2_Clicked"
                BackgroundColor="White"
                />

            <Button
                Text="Terceira Pagina"
                x:Name="BtnCelulares3"
                Clicked="BtnCelulares3_Clicked"
                BackgroundColor="White"
                />

            <Button
                Text="Quarta Página"
                x:Name="BtnCelulares4"
                Clicked="BtnCelulares4_Clicked"
                BackgroundColor="White"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
